<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6dddfc"
    android:scrollbars="vertical|horizontal"
    tools:context=".Practice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:freezesText="true"
        android:text="Practice every day"
        android:textColor="#fff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bn_speed"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_bg"
        android:freezesText="true"
        android:text="Speed And Distance" />


    <Button
        android:id="@+id/bn_ages"
        android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_bg"
        android:freezesText="true"
        android:text="Problem based on Ages" />

    <Button
        android:id="@+id/bn_probability"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_bg"
        android:freezesText="true"
        android:text="Probability" />

    <Button
        android:id="@+id/bn_time"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_bg"
        android:freezesText="true"
        android:text="Time and work" />

    <Button
        android:id="@+id/bn_ci"
        android:layout_width="200dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_bg"
        android:freezesText="true"
        android:text="Compound Interest" />

    </LinearLayout>

</ScrollView>